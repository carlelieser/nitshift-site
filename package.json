		"@sveltejs/enhanced-img": "^0.3.8",
		"@sveltejs/kit": "^1.20.4",
		"autoprefixer": "^10.4.14",
		"dotenv": "^16.4.5",
		"postcss": "^8.4.24",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.0.0",
		"vite": "^4.3.6",
		"vite-plugin-svelte-md": "^0.1.7"
	},
	"type": "module",
	"dependencies": {
